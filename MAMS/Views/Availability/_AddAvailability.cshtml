@using static MAMS.Services.Enums

@model DoctorAvailableDetails

<!-- Add New Modal -->
<div class="modal fade" id="addNewModal" tabindex="-1" aria-labelledby="addNewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h5 class="modal-title" id="addNewModalLabel">Add New Availability</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="AddNew" asp-controller="Availability" asp-route-id="@Model.Id">
                    <input type="hidden" value="@ViewData["DoctorId"]" asp-for="DoctorId" />
                    <div class="form-group">
                        <label asp-for="Available_Day">Available Day</label>
                        <select asp-for="Available_Day" class="form-control">
                            <option value="">--Day--</option>
                            @foreach (var day in Enum.GetValues(typeof(Days)))
                            {
                                <option value="@day">@day</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime">From</label>
                        <input type="time" asp-for="StartTime" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="EndTime">To</label>
                        <input type="time" asp-for="EndTime" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn bg-gradient-success">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>