@using System.Data
@using MAMS.Services
@using MAMS.Models

@{
    ViewData["Title"] = "Availabilities";
}

@model IEnumerable<DoctorAvailableDetails>

<div class="container">
    <div class="content-header">
        <h2>Availabilities</h2>
    </div>

    <div class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">--</h3>

                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->

                    <div class="card-body table-responsive p-0">

                        @if (Model == null)
                        {
                            <div class="alert alert-danger" role="alert">
                                Error: Failed to load data. Please try again later. or Please Log in again..
                            </div>
                        }
                        else if (!Model.Any())
                        {
                            <div class="alert alert-warning" role="alert">
                                NO data..
                            </div>
                        }

                        else
                        {
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Available Day</th>
                                        <th>From</th>
                                        <th>To</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var obj in Model)
                                    {
                                        <tr>
                                            <input asp-for="@obj.Id" hidden />
                                            <td data-Available_day="@obj.Day">@obj.Day</td>
                                            <td class="text-start text-break">@(obj.StartTime.HasValue ? new DateTime(obj.StartTime.Value.Ticks).ToString("hh:mm tt") : "")</td>
                                            <td class="text-center">@(obj.EndTime.HasValue ? new DateTime(obj.EndTime.Value.Ticks).ToString("hh:mm tt") : "")</td>

                                            <td>
                                                <div class="btn-group btn-group-justified" role="group">
                                                    <button type="button" class="btn btn-light" data-toggle="modal" data-target="#editModal-@obj.Id">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </button>
                                                    <a href="#" class="delete-button btn btn-light" data-id="@obj.Id">
                                                        <i class="bi bi-trash3-fill"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>

                                        @await Html.PartialAsync("_EditAvailability", obj)

                                    }
                                </tbody>
                            </table>

                        }

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</div>

