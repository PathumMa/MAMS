@{
    ViewData["Title"] = "MAMS Login";
    Layout = null;
}
@model Suser

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/bootstrap-icons-1.11.1/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MAMS.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="split left">
            <img src="~/img/MedEase.png" class="logo" alt="MedEase logo TM" />
            <div class="login-box">
                
                <figure>
                    <blockquote class="h2">
                        <p>Log in</p>
                    </blockquote>
                    <figcaption class="blockquote-footer">
                        Streamline your access to the <cite title="Source Title">MedEase&#8482;</cite> platform.
                    </figcaption>
                </figure>
                <hr />
                <div class="container" style="padding: 5% 0 10% 0;">
                    <form asp-controller="Login" asp-action="Enter" method="post" id="loginForm">
                        <div class="mb-4">
                            <label asp-for="UserName">User Name</label>
                            <input asp-for="UserName" class="form-control rounded-pill" required />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" class="form-control rounded-pill" autocomplete="new-password" type="password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button id="loginButton" type="submit" class="btn btn-outline-primary rounded-pill"><i class="bi bi-arrow-right-circle"></i> &nbsp; Log in </button>
                    </form>
                </div>
                <div class="container">
                    Are you new here?
                    <a asp-controller="Login" asp-action="SignUp" class="btn btn-outline-secondary rounded-pill" style="width:150px">Sign Up &nbsp; <i class="bi bi-box-arrow-in-right"></i></a>
                </div>
            </div>
            <footer class="border-top footer text-muted text-center">
                <div class="container">
                    &copy; 2024 - MAMS v2024.04.01.01
                </div>
            </footer>
        </div>
        <div class="split right">
            <div class="text-center">
                <img src="~/img/Login.png" class="img-fluid" alt="Login image">
            </div>
            <div class="row text-center">
                <h2 style="color: aliceblue;"><i>MedEase&#8482;</i></h2>
                <div class="row text-center">
                    <h2 style="color: aliceblue;">Appointment & Management System</h2>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var loginForm = document.getElementById('loginForm');
            var loginButton = document.getElementById('loginButton');

            loginForm.addEventListener('submit', function () {
                loginButton.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Loading...';
                loginButton.disabled = true;
            });
        });
    </script>
</body>
</html>
