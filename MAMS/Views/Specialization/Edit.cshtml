@model Specializations

@{
    ViewData["Title"] = "Edit Specialization";
}

<div class="container">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 d-flex justify-content-between align-items-center">
                    <h1>Edit Specialization</h1>
                    <a asp-controller="Specialization" asp-action="Index" class="btn bg-gradient-secondary rounded-pill">
                        <i class="bi bi-backspace"></i> &nbsp; Back To List
                    </a>
                </div>
                <div class="col-sm-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Specializations</a></li>
                        <li class="breadcrumb-item active">update</li>
                    </ol>
                </div>
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="card card-info card-outline">
                <div class="card-header">
                    <h4 class="card-title text-info">Edit Details: </h4>
                </div>
                <form method="post" asp-action="Update">
                    <div class="card-body">
                        <input asp-for="Specializations_Id" hidden />
                        <div class="mb-3">
                            <label asp-for="Specializations_Name"></label>
                            <input asp-for="Specializations_Name" class="form-control" />
                            <span asp-validation-for="Specializations_Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description">Description</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        @* <div class="mb-3">
                        <label asp-for="Record_Status">Status</label><br>
                        <div>
                        <input type="radio" asp-for="Record_Status" value="Active" /> Active
                        <input type="radio" asp-for="Record_Status" value="Inactive" /> Inactive
                        </div>
                        <span asp-validation-for="Record_Status" class="text-danger"></span>
                        </div> *@
                        <div class="mb-3">
                            <label class="form-label">Status :</label>
                            <div class="row">
                                <div class="col">
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input custom-control-input-success" asp-for="Record_Status" type="radio" id="customRadio1" value="Active">
                                        <label for="customRadio1" class="custom-control-label">Active</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="custom-control custom-radio">
                                        <input class="custom-control-input custom-control-input-danger" asp-for="Record_Status" type="radio" id="customRadio2" value="Inactive">
                                        <label for="customRadio2" class="custom-control-label">Inactive</label>
                                    </div>
                                </div>
                                <div class="col-10"></div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn bg-gradient-info rounded-pill float-right" style="width:150px"><i class="bi bi-arrow-clockwise" onclick=showConfirmationModal()></i> &nbsp; Update</button>
                        
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                Are you sure you want to Update/Modify this Specialization?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-warning" id="confirmYes">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptspartial" />
    }
    <script>
        //Function to show the confirmation modal
        function showConfirmationModal() {
            $('#confirmationModal').modal('show');
        }

        // Handle form submission when "Yes" is clicked
        $('#confirmYes').click(function () {
            $('#confirmationModal').modal('hide'); // Hide the modal
            $('form').submit(); // Submit the form
        });

        // Attach the confirmation dialog to the Create button
        $(document).ready(function () {
            $('button[type="submit"]').click(function (e) {
                e.preventDefault(); // Prevent the default form submission
                showConfirmationModal(); // Show the confirmation modal
            });
        });
    </script>
}

