@inject IHttpContextAccessor _httpContextAccessor;

@{
    var role = _httpContextAccessor.HttpContext.Session.GetInt32("Role") ?? 0;
}
<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-warning elevation-4" style="backdrop-filter: blur(40px);
    background-image: linear-gradient(to right top, #051937, #10315e, #1a4c89, #1f69b6, #1e88e5, #08d087);">
    <!-- Brand Logo -->
    <a asp-controller="Home" asp-action="Index" class="brand-link">
        <img src="~/img/MedEase_white.png" alt="MedEase Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">MAMS</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/adminlte/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@_httpContextAccessor.HttpContext.Session.GetString("UserName")</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->

                @if (role == 10) // Admin Role
                {
                    <li class="nav-item menu-open">
                        <a href="#" class="nav-link active">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Admin Maintenance
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Doctor" asp-action="Index">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Doctors</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Login" asp-action="SignUp">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Add New User</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Specialization" asp-action="Index">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Specializations</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Specialization" asp-action="Status">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Specializations Status</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                else if (role == 20) // Doctor
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Doctor" asp-action="MyAppointments">
                            <i class="nav-icon fas fa-calendar-check"></i>
                            <p>My Appointments</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Doctor" asp-action="Availability">
                            <i class="nav-icon fas fa-clock"></i>
                            <p>Availability</p>
                        </a>
                    </li>
                }

                else if (role == 30) // Patient
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="Book">
                            <i class="nav-icon fas fa-notes-medical"></i>
                            <p>Book Appointment</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="MyAppointments">
                            <i class="nav-icon fas fa-calendar-alt"></i>
                            <p>My Appointments</p>
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Simple Link
                            <span class="right badge badge-danger">New</span>
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>

<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
    <div class="p-3">
        <h5>--</h5>
        <p>Sidebar content</p>
        <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-warning rounded-pill" style="width:150px">Log Out &nbsp; <i class="bi bi-box-arrow-right"></i></a>
    </div>
</aside>
<!-- /.control-sidebar -->