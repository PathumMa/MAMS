@model MAMS.Models.ViewModels.DoctorDetailsViewModel

<div class="g-col-6">
    <div class="card card-info card-outline">
        <div class="card-header text-muted border-bottom-0 card-outline">
        @Model.UserName
        <input asp-for="@Model.Id" hidden />
    </div>
    <div class="card-body pt-0">
        <div class="row">
            <div class="col-7">
                <h2 class="lead">@Model.UserTitle.  <b>@Model.First_Name</b> @Model.Last_Name</h2>
                <p class="text-muted text-sm"><b>Spec: </b> @Model.Specialization </p>
                <ul class="ml-4 mb-0 fa-ul text-muted">
                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @Model.Address</li>
                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone: @Model.PhoneNumber</li>
                </ul>
                @* <ul class="ml-4 mb-0 fa-ul text-muted">
                    <li class="small"><span class="fa-li"><i class="bi bi-calendar-check"></i></span> Ava: @Model.Email</li>
                    <li class="small"><span class="fa-li"><i class="bi bi-alarm-fill"></i></span> Time: @Model.Personal_Id</li>
                </ul> *@
            </div>
            <div class="col-5 text-center">
                <img src="~/adminlte/dist/img/user1-128x128.jpg" alt="user-avatar" class="img-circle img-fluid">
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="text-right">
                <a asp-controller="Availability" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-sm bg-gradient-teal">
                <i class="bi bi-calendar-check"></i> &nbsp; Availability
            </a>
            <a href="#" class="btn btn-sm bg-gradient-primary">
                <i class="fas fa-user"></i> View Profile
            </a>
        </div>
    </div>
    </div>
</div>
